{
  "name": "guard_tower",
  "version": "1.0.0",
  "description": "I got tired writing authentication workflows for my apps and third party solutions didn't work out for me. So i made an authserver for all my apps. Super safeðŸ˜….",
  "scripts": {
    "build": "run-script-os",
    "build:win32": "SET NODE_ENV=production && webpack --progress --color --optimization-minimize && npm run flask-static-digest",
    "build:default": "NODE_ENV=production webpack --progress --color --optimization-minimize && npm run flask-static-digest",
    "start": "run-script-os",
    "start:win32": "concurrently -n \"WEBPACK,FLASK\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run webpack-watch:win32\" \"npm run flask-server\"",
    "start:default": "concurrently -n \"WEBPACK,FLASK\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run webpack-watch\" \"npm run flask-server\"",
    "webpack-watch": "run-script-os",
    "webpack-watch:win32": "SET NODE_ENV=debug && webpack --mode development --watch",
    "webpack-watch:default": "NODE_ENV=debug webpack --mode development --watch",
    "flask-server": "flask run --host=0.0.0.0",
    "flask-static-digest": "flask digest compile",
    "lint": "eslint \"assets/js/*.js\"",
    "prettier-lint": "prettier \"assets/js/*.js\" --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brian-Kariu/guard_tower.git"
  },
  "author": "Brian Kariu",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/Brian-Kariu/guard_tower/issues"
  },
  "homepage": "https://github.com/Brian-Kariu/guard_tower#readme",
  "dependencies": {
    "@popperjs/core": "2.11.8",
    "htmx.org": "^1.9.10"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/eslint-parser": "7.23.3",
    "@babel/preset-env": "7.23.8",
    "autoprefixer": "^10.4.16",
    "babel-loader": "9.1.3",
    "chokidar": "3.5.3",
    "concurrently": "8.2.2",
    "css-loader": "6.9.0",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.29.1",
    "less": "4.2.0",
    "less-loader": "11.1.4",
    "mini-css-extract-plugin": "2.7.7",
    "postcss": "^8.4.33",
    "postcss-loader": "^7.3.4",
    "postcss-preset-env": "^9.3.0",
    "prettier": "3.1.1",
    "run-script-os": "1.1.6",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
